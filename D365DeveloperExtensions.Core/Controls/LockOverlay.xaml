<UserControl x:Class="D365DeveloperExtensions.Core.Controls.LockOverlay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:resources="clr-namespace:D365DeveloperExtensions.Core.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="1100" SnapsToDevicePixels="True">
    <Grid x:Name="Overlay" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Panel.ZIndex="10" Background="DarkGray" Opacity="0.5" Visibility="Hidden">
        <Label x:Name="LockMessage" Content="{x:Static resources:Resource.LockOverlay_LockMessage_Label_DefaultContent}" VerticalAlignment="Center" 
               HorizontalAlignment="Center" FontSize="36"/>
    </Grid>
</UserControl>