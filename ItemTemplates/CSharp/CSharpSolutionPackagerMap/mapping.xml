<?xml version="1.0" encoding="utf-8"?>
<Mapping>
  
  <!-- Keep the filename as mapping.xml - this is the only way it will be used during pack & extract operations -->-->
  
  <!--https://msdn.microsoft.com/en-us/library/jj602987.aspx-->
  
  <!-- Match specific named files to an alternate folder -->
  <FileToFile map="YourPlugin.dll" to="..\..\Plugins\bin\**\YourPlugin.dll" />
  <FileToFile map="YourWorkflow.dll" to="..\..\YourWorkflow\bin\**\SomeWorkflow.dll" />
  <!-- Match any file in and under WebResources to an alternate set of sub-folders -->
  <FileToPath map="WebResources\*.*" to="..\..\YourFolder\WebResources\**" />
  <FileToPath map="WebResources\**\*.*" to="..\..\YourFolder\WebResources\**" />
</Mapping>